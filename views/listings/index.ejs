<% layout("/layouts/boilerplate") %>
    <h3>All listings</h3>

    <div class="row row-cols-lg-3  row-cols-md-2  row-cols-sm-1">

        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col">
                    <img src="<%= listing.image.url %>" style="height: 20rem" class="card-img-top" alt="listing_image">
                   <div class="card-img-overlay"></div>
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>

                        </p>
                        <p>
                            <svg xmlns="http://www.w3.org/2000/svg" height="16px" width="16px" viewBox="0 -960 960 960" fill="#5f6368">
                                <path d="M549-120 280-400v-80h140q53 0 91.5-34.5T558-600H240v-80h306q-17-35-50.5-57.5T420-760H240v-80h480v80H590q14 17 25 37t17 43h88v80h-81q-8 85-70 142.5T420-400h-29l269 280H549Z"/>
                            </svg> 
                            <%= listing.price.toLocaleString("en-IN")  %>/night
                        </p>

                    </div>
                </div>
            </a>
            <% } %>
    </div>